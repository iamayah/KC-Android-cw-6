<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorofbackground"
    >

    <TextView
        android:id="@+id/namee"
        android:layout_width="121dp"
        android:layout_height="34dp"
        android:layout_above="@+id/agee"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="267dp"
        android:layout_marginBottom="21dp"
        android:text="name"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/agee"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="272dp"
        android:layout_marginBottom="248dp"
        android:text="age"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/gradee"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="391dp"
        android:layout_marginBottom="180dp"
        android:text="grade"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/scrunkly"
        android:layout_width="214dp"
        android:layout_height="184dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="98dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="99dp"
        app:srcCompat="@drawable/ddg" />

    <Button
        android:id="@+id/ns"
        android:layout_width="130dp"
        android:layout_height="53dp"
        android:layout_below="@+id/scrunkly"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="146dp"
        android:layout_marginTop="264dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="59dp"
        android:text="next student" />

</RelativeLayout>